#!/usr/bin/env bash
#
# Install/deployment script for pi setup
# @author robrant
#

set -e

IFS=$','

export ANSIBLE_ERROR_ON_UNDEFINED_VARS=True
export ANSIBLE_HOST_KEY_CHECKING=False

if [[ $# -gt 0 ]]; then
  if [ $1 = "pi-user" ]; then
    echo 'Running: ansible-playbook --user=pi --ask-pass -i hosts bootstrap_user.yml'
    ansible-playbook --user=pi --ask-pass -i hosts bootstrap_user.yml
  else
    echo 'Running: ansible-playbook --user=pi -i hosts playbook.yml --tags' "$*"
    ansible-playbook --user=pi -i hosts playbook.yml --tags "$*"
  fi
else
  echo 'Running: ansible-playbook --user=pi --ask-pass -i hosts bootstrap_user.yml'
  ansible-playbook --user=pi --ask-pass -i hosts bootstrap_user.yml
  echo 'Running: ansible-playbook --user=pi -i hosts playbook.yml'
  ansible-playbook --user=pi -i hosts playbook.yml
fi
